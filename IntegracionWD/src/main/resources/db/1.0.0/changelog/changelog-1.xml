<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
  http://www.liquibase.org/xml/ns/dbchangelog-ext
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- Creacion de tablas -->

    <changeSet id="1" author="yadickson.soto" dbms="mssql">
        <ext:tagDatabase tag="1.0.0-1.1" />
        
        <createTable tableName="Vehiculos" >
            <column name="Id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_vehiculos_id"/>
            </column>
            <column name="Patente" type="NCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="Marca" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="Modelo" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="Anio" type="NCHAR(4)">
                <constraints nullable="false"/>
            </column>
            <column name="TipoVehiculo" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="Contrato" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="RazonSocial" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="FechaExpiracion" type="NCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="MotivoRechazo" type="NVARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="FechaRegistro" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="Estado" type="NCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="Vehiculos"/>
        </rollback>

    </changeSet>

    <changeSet id="2" author="yadickson.soto" dbms="mssql">
        <ext:tagDatabase tag="1.0.0-1.2" />
        
        <createTable tableName="Personas">
            <column name="Id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_personas_id"/>
            </column>
            <column name="Nombre" type="NVARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="Apellido" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="RUT" type="NCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="Tarjeta" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="TipoPase" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="Contrato" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="RazonSocial" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="FechaExpiracionTrabajador" type="NCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="MotivoRechazoTrabajador" type="NVARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="FechaExpiracionLicencia" type="NCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="MotivoRechazoLicencia" type="NVARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="FechaRegistro" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="Estado" type="NCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="Personas"/>
        </rollback>

    </changeSet>

    <changeSet id="3" author="yadickson.soto" dbms="mssql">
        <ext:tagDatabase tag="1.0.0-1.3" />
        
        <createTable tableName="Parametros">
            <column name="Id" type="INT" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_parametros_id"/>
            </column>
            <column name="Nombre" type="NVARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="Valor" type="NVARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="FechaModificacion" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="Parametros"/>
        </rollback>

    </changeSet>

    <changeSet id="4" author="yadickson.soto" dbms="mssql">
        <ext:tagDatabase tag="1.0.0-1.4" />
        
        <createTable tableName="LogVehiculos">
            <column name="Id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_log_vehiculos_id"/>
            </column>
            <column name="Mensaje" type="NVARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="FechaRegistro" type="DATE">
                <constraints nullable="false"/>
